# привет.err - Пример программы на русском языке
# hello.err in Russian - demonstrates i18n support

функция фиб(н)
    если н <= 1
        вернуть н
    конец
    вернуть фиб(н - 1) + фиб(н - 2)
конец

главный
    печать("Привет, Error-Lang!")
    печать("Это учебный язык программирования.")

    пусть числа = [1, 2, 3, 4, 5]
    для число в числа
        печать("Число:", число)
    конец

    печать("Фибоначчи(10) =", фиб(10))

    ошибка
        # Зона ошибок - здесь что-то сломается
        пусть сломано = "незакрытая строка
        пусть странно = @#$%
    конец

    печать("Программа всё равно работает!")
конец
